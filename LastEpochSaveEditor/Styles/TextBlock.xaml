<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style x:Key="ProgramNameTextBlock" TargetType="TextBlock">
		<Setter Property="FontFamily" Value="Oswald" />
		<Setter Property="FontSize" Value="36" />
		<Setter Property="Foreground" Value="{DynamicResource BigTitleBackgroundColor}" />
	</Style>

	<Style x:Key="ProgramDescriptionTextBlock" TargetType="TextBlock">
		<Setter Property="FontFamily" Value="Roboto" />
		<Setter Property="FontSize" Value="12" />
		<Setter Property="Foreground" Value="{DynamicResource DescriptionTitleBackgroundColor}" />
	</Style>
</ResourceDictionary>