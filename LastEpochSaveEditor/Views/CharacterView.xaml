<UserControl x:Class="LastEpochSaveEditor.Views.CharacterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:converters="clr-namespace:LastEpochSaveEditor.Converters"
			 xmlns:controls="clr-namespace:LastEpochSaveEditor.Controls"
			 mc:Ignorable="d" Background="{DynamicResource BackgroundColor}"
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		<converters:QualityToColorConverter x:Key="qualityToColorConverter"></converters:QualityToColorConverter>
	</UserControl.Resources>
	<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" ShowGridLines="True">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<!-- Helm -->
		<UniformGrid Grid.Row="0" Grid.Column="1">
			<controls:ItemButton Quality="{Binding HelmQuality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding HelmPressedCommand}" IconWidth="69" IconHeight="69"
								 Icon="{Binding HelmIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Amulet -->
		<UniformGrid Grid.Row="0" Grid.Column="2" Margin="10">
			<controls:ItemButton Quality="{Binding AmuletQuality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding AmuletPressedCommand}" IconWidth="43" IconHeight="43" HorizontalAlignment="Left"
								 Icon="{Binding AmuletIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Weapon -->
		<UniformGrid Grid.Row="1" Grid.Column="0" Margin="10">
			<controls:ItemButton Quality="{Binding WeaponQuality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding WeaponPressedCommand}" IconWidth="69" IconHeight="139" HorizontalAlignment="Right"
								 Icon="{Binding WeaponIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Body -->
		<UniformGrid Grid.Row="1" Grid.Column="1">
			<controls:ItemButton Quality="{Binding BodyQuality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding BodyPressedCommand}" IconWidth="93" IconHeight="139"
								 Icon="{Binding BodyIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>

		<!-- Off-hand -->
		<UniformGrid Grid.Row="1" Grid.Column="2" Margin="10">
			<controls:ItemButton Quality="{Binding OffHandQuality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding OffHandPressedCommand}" IconWidth="69" IconHeight="139" HorizontalAlignment="Left"
								 Icon="{Binding OffHandIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Left ring -->
		<UniformGrid Grid.Row="2" Grid.Column="0" Margin="10">
			<controls:ItemButton Quality="{Binding LeftRingQuality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding LeftRingPressedCommand}" IconWidth="39" IconHeight="39" HorizontalAlignment="Right"
								 Icon="{Binding LeftRingIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>

		<!-- Belt -->
		<UniformGrid Grid.Row="2" Grid.Column="1" Margin="10">
			<controls:ItemButton Quality="{Binding BeltQuality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding BeltPressedCommand}" IconWidth="93" IconHeight="39"
								 Icon="{Binding BeltIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Right ring -->
		<UniformGrid Grid.Row="2" Grid.Column="2" Margin="10">
			<controls:ItemButton Quality="{Binding RightRingQuality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding RightRingPressedCommand}" IconWidth="39" IconHeight="39" HorizontalAlignment="Left"
								 Icon="{Binding RightRingIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Gloves -->
		<UniformGrid Grid.Row="3" Grid.Column="0" Margin="10">
			<controls:ItemButton Quality="{Binding GlovesQuality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding GlovesPressedCommand}" IconWidth="69" IconHeight="69" HorizontalAlignment="Right"
								 Icon="{Binding GlovesIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Boots -->
		<UniformGrid Grid.Row="3" Grid.Column="1" Margin="10">
			<controls:ItemButton Quality="{Binding BootsQuality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding BootsPressedCommand}" IconWidth="69" IconHeight="69"
								 Icon="{Binding BootsIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Relic -->
		<UniformGrid Grid.Row="3" Grid.Column="2" Margin="10">
			<controls:ItemButton Quality="{Binding RelicQuality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding RelicPressedCommand}" IconWidth="69" IconHeight="69" HorizontalAlignment="Left"
								 Icon="{Binding RelicIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
	</Grid>
</UserControl>
