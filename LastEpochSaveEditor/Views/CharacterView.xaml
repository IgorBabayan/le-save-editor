<UserControl x:Class="LastEpochSaveEditor.Views.CharacterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:converters="clr-namespace:LastEpochSaveEditor.Converters"
			 xmlns:controls="clr-namespace:LastEpochSaveEditor.Controls"
			 mc:Ignorable="d" Background="{DynamicResource BackgroundColor}"
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		<converters:QualityToColorConverter x:Key="qualityToColorConverter"></converters:QualityToColorConverter>
	</UserControl.Resources>
	<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<!-- Helm -->
		<UniformGrid Grid.Row="0" Grid.Column="1">
			<controls:ItemButton Quality="{Binding Helm.Quality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding HelmPressedCommand}" IconWidth="{Binding Helm.Width}" IconHeight="{Binding Helm.Height}"
								 Icon="{Binding Helm.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Amulet -->
		<UniformGrid Grid.Row="0" Grid.Column="2" Margin="10">
			<controls:ItemButton Quality="{Binding Amulet.Quality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"
								 Command="{Binding AmuletPressedCommand}" IconWidth="{Binding Amulet.Width}" IconHeight="{Binding Amulet.Height}"
								 Icon="{Binding Amulet.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Weapon -->
		<UniformGrid Grid.Row="1" Grid.Column="0" Margin="10">
			<controls:ItemButton Quality="{Binding Weapon.Quality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right"
								 Command="{Binding WeaponPressedCommand}" IconWidth="{Binding Weapon.Width}" IconHeight="{Binding Weapon.Height}"
								 Icon="{Binding Weapon.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Body -->
		<UniformGrid Grid.Row="1" Grid.Column="1">
			<controls:ItemButton Quality="{Binding Body.Quality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding BodyPressedCommand}" IconWidth="{Binding Body.Width}" IconHeight="{Binding Body.Height}"
								 Icon="{Binding Body.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>

		<!-- Off-hand -->
		<UniformGrid Grid.Row="1" Grid.Column="2" Margin="10">
			<controls:ItemButton Quality="{Binding OffHand.Quality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"
								 Command="{Binding OffHandPressedCommand}" IconWidth="{Binding OffHand.Width}" IconHeight="{Binding OffHand.Height}"
								 Icon="{Binding OffHand.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Left ring -->
		<UniformGrid Grid.Row="2" Grid.Column="0" Margin="10">
			<controls:ItemButton Quality="{Binding LeftRing.Quality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right"
								 Command="{Binding LeftRingPressedCommand}" IconWidth="{Binding LeftRing.Width}" IconHeight="{Binding LeftRing.Height}"
								 Icon="{Binding LeftRing.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>

		<!-- Belt -->
		<UniformGrid Grid.Row="2" Grid.Column="1" Margin="10">
			<controls:ItemButton Quality="{Binding Belt.Quality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding BeltPressedCommand}" IconWidth="{Binding Belt.Width}" IconHeight="{Binding Belt.Height}"
								 Icon="{Binding Belt.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Right ring -->
		<UniformGrid Grid.Row="2" Grid.Column="2" Margin="10">
			<controls:ItemButton Quality="{Binding RightRing.Quality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"
								 Command="{Binding RightRingPressedCommand}" IconWidth="{Binding RightRing.Width}" IconHeight="{Binding RightRing.Height}"
								 Icon="{Binding RightRing.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Gloves -->
		<UniformGrid Grid.Row="3" Grid.Column="0" Margin="10">
			<controls:ItemButton Quality="{Binding Gloves.Quality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right"
								 Command="{Binding GlovesPressedCommand}" IconWidth="{Binding Gloves.Width}" IconHeight="{Binding Gloves.Height}"
								 Icon="{Binding Gloves.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Boots -->
		<UniformGrid Grid.Row="3" Grid.Column="1" Margin="10">
			<controls:ItemButton Quality="{Binding Boots.Quality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Command="{Binding BootsPressedCommand}" IconWidth="{Binding Boots.Width}" IconHeight="{Binding Boots.Height}"
								 Icon="{Binding Boots.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
		
		<!-- Relic -->
		<UniformGrid Grid.Row="3" Grid.Column="2" Margin="10">
			<controls:ItemButton Quality="{Binding Relic.Quality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"
								 Command="{Binding RelicPressedCommand}" IconWidth="{Binding Relic.Width}" IconHeight="{Binding Relic.Height}"
								 Icon="{Binding Relic.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></controls:ItemButton>
		</UniformGrid>
	</Grid>
</UserControl>
