<Grid x:Class="LastEpochSaveEditor.Controls.ItemImage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:LastEpochSaveEditor.Controls">
	<Grid.Background>
		<ImageBrush Stretch="UniformToFill" Opacity="0.9" ImageSource="/Images/Misc/ItemBackground.png" />
	</Grid.Background>
	
	<Image Source="{Binding Item.Icon}" Stretch="Uniform"
	       Cursor="Hand" Width="{Binding Item.Width}"
	       Height="{Binding Item.Height}"
	       DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ItemImage}}}" />
</Grid>
