<UserControl x:Class="LastEpochSaveEditor.Controls.ItemImage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:LastEpochSaveEditor.Controls">
	<Grid>
		<Grid.Background>
			<ImageBrush Stretch="UniformToFill" Opacity="0.9" ImageSource="../Images/Misc/ItemBackground.png" />
		</Grid.Background>

		<Image Source="{Binding Item.Icon, RelativeSource={RelativeSource AncestorType={x:Type controls:ItemImage}}}"
			   Stretch="Uniform" Cursor="Hand"
			   Width="{Binding Item.Width, RelativeSource={RelativeSource AncestorType={x:Type controls:ItemButton}}}"
			   Height="{Binding Item.Height, RelativeSource={RelativeSource AncestorType={x:Type controls:ItemButton}}}" />
	</Grid>
</UserControl>
