<Button x:Class="LastEpochSaveEditor.Controls.DockButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Style="{StaticResource DockButtonStyle}"
             xmlns:local="clr-namespace:LastEpochSaveEditor.Controls"
             x:Name="MainButton">
    <Button.Background>
        <DrawingBrush Drawing="{Binding Icon, RelativeSource={RelativeSource AncestorType={x:Type local:DockButton}}}" Stretch="Uniform" />
    </Button.Background>
    
    <Popup HorizontalOffset="-40" DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:DockButton}}}"
           PlacementTarget="{Binding ElementName=MainButton}"
           IsOpen="{Binding ElementName=MainButton, Path=IsMouseOver, Mode=OneWay}"
           Style="{StaticResource PopupStyle}">
        <Grid>
            <Border Style="{StaticResource PopupBorder}">
                <TextBlock Text="{Binding PopupTooltip}" Style="{StaticResource PopupText}" Margin="10,0,10,0" />
            </Border>

            <Path Style="{StaticResource ArrowPath}" />
        </Grid>
    </Popup>
</Button>
