<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LastEpochSaveEditor.App"
             xmlns:local="using:LastEpochSaveEditor.UI"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Resources/Theme.axaml" />
				<ResourceInclude Source="/Resources/FontAwesome.axaml" />
				<ResourceInclude Source="/Resources/FontAwesome.axaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/Popup.axaml"></StyleInclude>
        <StyleInclude Source="Styles/TextBlock.axaml"></StyleInclude>
        <StyleInclude Source="Controls/CloseButton.axaml"></StyleInclude>
    </Application.Styles>
</Application>